    if (modalSelectedRegion) {
      searchLibraries();
    } else {
      libraryInitial?.classList.remove('hidden');
      libraryEmpty?.classList.add('hidden');
      libraryLoading?.classList.add('hidden');
      libraryCount?.classList.add('hidden');
      if (libraryList) libraryList.innerHTML = '';
